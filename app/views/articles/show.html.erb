<div class='card mt-4'>
  <h2 class='card-header'><%= @article.title %></h2>
  <div class='card-block'>
    <div align='center'>
      <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
      <div class="card-block">
        <div class="card-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </div>
        <div class="card-text">
          <small>
            <%= pluralize(@article.user.articles.count, 'article') if @article.user.articles %>
          </small>
        </div>
      </div>
    </div>
    <div class='card-text'>
      <%= simple_format(@article.description) %>
    </div>
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Back', articles_path, class: 'btn btn-info btn-sm' %>
    <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>
